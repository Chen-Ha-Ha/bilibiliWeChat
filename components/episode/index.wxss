/* components/epsoide/index.wxss */
.container{
  display: flex;
  flex-direction: row;
  height: 60rpx;
}
.index-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.date-container{
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}
.plain{
  font-size: 32rpx;
}
.index{
  font-size: 60rpx;
  font-weight: 800;
  line-height: 60rpx;
  margin-right: 14rpx;
}
.line{
  height: 44rpx;
  margin-right: 14rpx;
  border: 1px solid black;
}
.month{
  font-size: 24rpx;
  line-height: 24rpx;
}
.year{
  font-size: 20rpx;
}